# Docker Compose Environment Configuration
# Copy this to .env and configure for your environment

# MongoDB Configuration
MONGO_ROOT_PASSWORD=changeme123

# Qiita API
QIITA_TOKEN=your_qiita_token_here

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here
AMAZON_ASSOCIATE_TAG=your_amazon_associate_tag_here
AMAZON_REGION=us-east-1
AMAZON_ENDPOINT=webservices.amazon.com

# API Authentication
API_KEYS=production-api-key-2024,admin-api-key-2024
NUXT_PUBLIC_API_KEY=production-api-key-2024

# Security
JWT_SECRET=your_jwt_secret_here_make_it_long_and_secure
ADMIN_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Configuration
CRON_TIMEZONE=UTC
QIITA_DEFAULT_QUERY=created:>2024-01-01 stocks:>3
ENABLE_CRON_JOBS=true

# Slack Notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_DEFAULT_CHANNEL=#techbook-alerts
ENABLE_SLACK_NOTIFICATIONS=true

# Environment
NODE_ENV=production